.badge {
  display: inline-block;
  padding: .25em .4em;
  font-size: 12px;
  font-weight: 400;
  line-height: 1;
  color: #fff;
  text-align: center;
  white-space: nowrap;
  vertical-align: baseline;
  border-radius: 3px;
  margin-left: 3px;

  &--orange {
    color: #fff;
    background-color: rgb(255, 153, 0);
  }
}

@media only screen and (min-width : 100px) and (max-width : 999px) {
  .badge {
    margin-left: 1px;
    font-size: 11px;
  }
}
